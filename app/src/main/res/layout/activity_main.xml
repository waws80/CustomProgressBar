<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thanatos.customprogressbar.MainActivity">

   <thanatos.customprogressbar.CustomProgressBar
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:bgCirColor="#ff0"
       app:circleColor="@android:color/holo_red_dark"
       app:arcColor="@android:color/holo_green_dark"
       app:textColor="@android:color/holo_green_dark"
       app:textSize="20sp"
       app:textType="italic"
       app:arcType="interval"
       app:arcType_interval_interval="5"
       app:arcType_interval_width="8"
       app:cirStokeWidth="10"
       app:arcStokeWidth="30"
       app:value="20"
       android:layout_marginLeft="100dp"
       android:id="@+id/customProgressBar" />

<TextView
    android:text="进度"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
   <SeekBar

       android:id="@+id/seekbar"
       android:layout_marginTop="20dp"
       android:layout_width="200dp"
       android:layout_height="wrap_content" />
   <TextView
       android:text="间隔的宽度"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <SeekBar
       android:id="@+id/seekbar_interval"
       android:layout_marginTop="20dp"
       android:layout_width="200dp"
       android:layout_height="wrap_content" />

   <TextView
       android:text="每个间隔的宽"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
   <SeekBar
       android:id="@+id/seekbar_width"
       android:layout_marginTop="20dp"
       android:layout_width="200dp"
       android:layout_height="wrap_content" />

   <RadioGroup
       android:id="@+id/rg"
       android:layout_marginTop="20dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/nomal"
          android:text="普通模式"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <RadioButton
          android:id="@+id/interval"
          android:text="间隔模式"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

   </RadioGroup>
</LinearLayout>
